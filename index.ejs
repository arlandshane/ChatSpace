	<body>
		<nav style="padding: 0 1rem">
			<h1>Chat Space</h1>
			<div>
				<% if (currentUser) { %>
				<a
					style="
						display: inline-flex;
						text-decoration: none;
						color: black;
						gap: 0.5rem;
					"
					href="/user/<%= currentUser.username %>"
				>
					<p><%= currentUser.username %></p>
					<img
						class="avatar"
						src="<%= currentUser.profilePicUrl %>"
						alt="dp"
					/>
				</a>
				<% } %>
			</div>
		</nav>
		<hr />
		<div style="display: flex">
